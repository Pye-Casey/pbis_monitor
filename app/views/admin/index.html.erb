
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Admin - PBIS</title>

    <!-- Bootstrap Core CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    
    <!-- Custom CSS -->
    <%= stylesheet_link_tag "sb-admin-2.css" %>

    <!-- Custom Fonts -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>
    <script src="chartkick.js"></script>
   


</head>

<body>

    <div id="wrapper">

        <!-- Navigation -->
        <%= render 'menu' %>

        <div id="" class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Dashboard</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div> 
            <!-- /.row -->
            
            <div class="row">
                <div class="col-lg-8">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="fa fa-bar-chart-o fa-fw"></i> Events By Location
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div id=""></div>
                            <%= pie_chart [["Hallway", 10], ["Playground", 5], ["Homeroom", 20], ["Cafeteria", 20]] %>
                        </div>
                        <!-- /.panel-body -->
                    </div>                    
                </div>
                <div class="col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="fa fa-bell fa-fw"></i> Recent Events
                        </div>
                        <!-- /.panel-heading -->
                        <table width="100%" class="table table-striped table-bordered table-hover table-condensed" id="recentEvents">
                                <thead>
                                    <tr>
                                        <th>Student</th>
                                        <th>Date</th>
                                        <th>Time</th>
                                        <th>View</th>
                                    </tr>
                                </thead>
                                <tbody>
                                  <% @recentEvents.each do |behave| %> 
                                    <tr>
                                      <td><%= behave.student_name%></td>
                                      <td><%= behave.event_date %></td>
                                      <td><%= behave.readable_time %></td>
                                      <td><%= link_to 'Show', behavior_path(behave) %></td>
                                    </tr>
                                  <% end %>
                                </tbody>                               
                            </table>
                            <!-- /.table-responsive -->
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="fa fa-bar-chart-o fa-fw"></i> Events By Day
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div id=""></div>
                            <%= line_chart Behavior.group_by_day(:event_date).count %>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-8 -->
                <div class="col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="fa fa-bell fa-fw"></i> Frequent Behaviors
                            <table width="100%" class="table table-striped table-bordered table-hover table-condensed" id="recentEvents">
                                <thead>
                                    <tr>
                                       <th># Events</th>
                                       <th>Name</th>
                                       <th>View</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    
                                    <% @highFliers.each do |s| %> 
                                    <tr>
                                      <td><%= s.count %></td>
                                      <td><%= s.student_name %></td>
                                      <td><%= link_to 'View', student_path(s.student_id) %></td>
                                    </tr>
                                  <% end %>
                                </tbody>                               
                            </table>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-heading -->
                        
                    </div>
                </div>

            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <%= javascript_include_tag "jquery.min.js" %>

    <!-- Bootstrap Core JavaScript -->
    <%= javascript_include_tag "bootstrap.min.js" %>
    

</body>
