<% provide(:title, 'New Student') %>

  <!-- Navigation -->
  <%= render 'menu' %>
  <h1 class="page-header" align="center">Add a New Student</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@student, url: students_create_path) do |f| %>
        <%= render 'error_messages' %>

        <%= f.label "First Name"  %>
        <%= f.text_field :fName, class: 'form-control' %>

        <%= f.label "Last Name" %>
        <%= f.text_field :lName, class: 'form-control' %>

        <%= f.label "Grade" %>
        <%= f.text_field :grade, class: 'form-control' %>

        <%= f.label "Teacher" %>
        <%= f.select :homeroom_teacher, Staff.all.collect { |s| [s.lName, s.id] }, {}, required: 'true', autofocus: 'false', class: 'form-control' %>

        <br/>

        <%= f.submit "Add New Student", class: "btn btn-primary" %>
        <%= link_to 'Back', students_path, class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
