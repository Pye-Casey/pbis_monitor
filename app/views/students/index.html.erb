<% provide(:title, 'View Students') %>
<%= render 'menu' %>
<div id="wrapper">
  <div id="" class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">Current Student List</h1>
      </div>
    </div>
    <div >
      <div class="row">
        <div class="col-lg-12">
          <div class="panel panel-default">
            <div class="panel-body table-responsive">
              <table width="100%" class="table table-striped table-bordered table-hover" id="studentTable">
                <thead>
                  <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Grade</th>
                    <th>Homeroom Teacher</th>
                    <th>View</th>
                    <th>Edit</th>
                    <th>Destroy</th>
                  </tr>
                </thead>
                <tbody>
                  <% @students.each do |student| %>
                    <tr>
									    <td><%= student.fName %></td>
									    <td><%= student.lName %></td>
									    <td><%= student.grade %></td>
									    <td><%= student.teacher_name %></td>
									    <td><%= link_to 'Show', student_path(student) %></td>
										  <td><%= link_to 'Edit', edit_student_path(student) %></td>
										  <td><%= link_to 'Destroy', student_path(student),
											        method: :delete,
													    data: {confirm: 'Are you sure?'} %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
              <%= link_to 'Return to Main', admin_path, class: "btn btn-primary"  %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
