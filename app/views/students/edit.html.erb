<% provide(:title, 'Edit Student') %>
<%= render 'menu' %>

<h1 align="center">Edit Student</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @student, local: true do |f| %>

      <%= render 'error_messages' %>

      <%= f.label "First Name"  %>
      <%= f.text_field :fName, class: 'form-control' %>

      <%= f.label "Last Name" %>
      <%= f.text_field :lName, class: 'form-control' %>

      <%= f.label "Grade" %>
      <%= f.text_field :grade, class: 'form-control' %>

      <%= f.label "Teacher" %>
      <%= f.select :teacher_name, Staff.all.collect { |s| [s.full_name_last, s.full_name_last] }, {}, required: 'true', autofocus: 'false', class: 'form-control' %>

      <br/>

      <%= f.submit "Save Changes", class: "btn btn-primary" %>
      <%= link_to 'Return to View', students_path, class: "btn btn-primary" %> 
      <% end %>
  </div>
</div>
