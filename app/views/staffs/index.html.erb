
<h1>Listing Staff members</h1>
 
<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th></th>
  </tr>
 
  <% @staffs.each do |staff| %>
    <tr>
      <td><%= staff.fName %></td>
      <td><%= staff.lName %></td>
      <td><%= link_to 'Show', staff_path(staff) %></td>
	  <td><%= link_to 'Edit', edit_staff_path(staff) %></td>
	  <td><%= link_to 'Destroy', staff_path(staff),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
