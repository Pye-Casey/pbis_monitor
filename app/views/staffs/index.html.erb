<% provide(:title, 'View Staff') %>
<%= render 'menu' %>

<div id="wrapper">
  <div id="" class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">Current Staff List</h1>
      </div>
    </div>
    <div >
      <div class="row">
        <div class="col-lg-12">
          <div class="panel panel-default">
            <div class="panel-body table-responsive">
              <table width="100%" class="table table-striped table-bordered table-hover" id="studentTable">
                <thead>
                  <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Grade</th>
                    <th>View</th>
                    <th>Edit</th>
                    <th>Destroy</th>
                  </tr>
                </thead>
                <tbody>
								  <% @staffs.each do |staff| %>
								  <tr>
								    <td><%= staff.fName %></td>
								    <td><%= staff.lName %></td>
                    <td><%= staff.gradeTaught %></td>
								    <td><%= link_to 'Show', staff_path(staff) %></td>
								    <td><%= link_to 'Edit', edit_staff_path(staff) %></td>
								    <td><%= link_to 'Destroy', staff_path(staff),
										        method: :delete,
										        data: { confirm: 'Are you sure?' } %></td>
								  </tr>
							    <% end %>
                </tbody>
              </table>
              <%= link_to 'Return to Main', admin_path, class: "btn btn-primary"  %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
